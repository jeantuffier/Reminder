<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="no.hyper.reminder">

    <application
        android:name=".common.Reminder"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".display.view.DisplayTaskActivity"
                  android:theme="@style/AppTheme.NoActionBar">

            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>

        </activity>

        <activity android:name=".create.view.activity.CreateTaskActivity"
                  android:label="@string/activity_create_task_name"
                  android:theme="@style/AppTheme.NoActionBar">

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".display.view.DisplayTaskActivity" />

        </activity>

        <service android:name=".create.presenter.service.DisplayNotificationService"
                 android:permission="android.permission.BIND_JOB_SERVICE"
                 android:exported="true"/>

    </application>

</manifest>
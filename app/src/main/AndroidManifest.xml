<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="fr.jeantuffier.reminder">

    <uses-permission android:name="android.permission.WAKE_LOCK"/>

    <application
        android:name="fr.jeantuffier.reminder.common.Reminder"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name="fr.jeantuffier.reminder.display.view.DisplayTaskActivity"
                  android:theme="@style/AppTheme.NoActionBar">

            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>

        </activity>

        <activity android:name="fr.jeantuffier.reminder.create.view.activity.CreateTaskActivity"
                  android:label="@string/activity_create_task_name"
                  android:theme="@style/AppTheme.NoActionBar">

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="fr.jeantuffier.reminder.display.view.DisplayTaskActivity" />

        </activity>

        <service android:name="fr.jeantuffier.reminder.common.service.DisplayNotificationService"/>

    </application>

</manifest>